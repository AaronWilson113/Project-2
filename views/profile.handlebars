<div class="container-fluid text-center">
    <h2>User Information</h2>
    <p>Current Weight:</p> 
        <p>{{currentWeight}} lbs</p>
        
       
    <p>Goal Weight: 
        {{goalWeight}} lbs</p>
        
      
      
</div>
<br><br>
<div class="container-fluid text-center">
    <h2>Workouts</h2>
    {{#each workouts as |workout|}}
    <div>
        <h3>{{workouts.workoutName}}</h3>
        <div>
            <h4>{{exOne}}</h4>
            <h4>{{exTwo}}</h4>
            <h4>{{exThree}}</h4>
            <h4>{{exFour}}</h4>
            <h4>{{exFive}}</h4>
            <form>
                <div>
                    <label for="caloriesBurned" class="form-label">Calories Burned</label>
                    <input type="number" class="form-control" id="caloriesBurned">
                </div>
                <div>
                    <label for="timeNeeded" class="form-label">Time Needed</label>
                    <input type="text" class="form-control" id="timeNeeded">
                </div>
                <div>
                    <label for="notes" class="form-label">Notes</label>
                    <input type="text" class="form-control" id="notes">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    {{/each}}
    <button type="button" class="btn btn-primary">Go To Workouts</button>
</div>
<script src="./js/login.js"></script>